<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="6dp"
    app:cardElevation = "0dp">

    <FrameLayout
        android:id="@+id/leftBorder"
        android:background="#FFF"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/topBorder"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <ImageView
            app:srcCompat="@drawable/ic_access_time_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="1dp"
            android:id ="@+id/clock_logo"/>
        <TextView
            android:layout_toEndOf="@id/clock_logo"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:textSize = "22sp"
            android:text = "12 : 30 - 12 : 40"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/clock_text"/>
        <TextView
            android:id = "@+id/order_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text = "#1"/>

        <ImageView
            app:srcCompat = "@drawable/ic_school_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/clock_logo"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:id = "@+id/teacher_logo"/>
        <TextView
            android:layout_below="@id/clock_text"
            android:layout_toEndOf="@id/teacher_logo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize = "18sp"
            android:text = "Виктория Пантелеева"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/teacher_text"/>
        <ImageView
            app:srcCompat = "@drawable/ic_room_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/teacher_text"
            android:id = "@+id/room_logo"/>

        <TextView
            android:layout_below="@id/teacher_text"
            android:layout_toEndOf="@id/room_logo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize = "18sp"
            android:text = "101"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/room_text"/>





    </RelativeLayout>
</android.support.v7.widget.CardView>